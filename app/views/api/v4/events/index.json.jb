# frozen_string_literal: true
json = {}

json[:events] = @events.map do |event|
  ev = Rails.cache.fetch ["v4", "event", @req_source, event.id, event.updated_at.to_i] do
    render partial: @req_source, locals: { event: event, lang: @lang }, handlers: "jb"
  end
  ci = current_user.present? ? current_user.event_checkins.where(event_id: event.id).first : nil

  if ci.present?
    ev[:checkin_id] = ci.id
  else
    ev[:checkin_id] = nil
  end
  ev
end

json
