# frozen_string_literal: true

json = {
  id: course.id,
  semester_id: course.semester_id,
  name: course.name,
  description: course.description,
  start_date: course.start_date.to_s,
  end_date: (course.end_date.present? ? course.end_date.to_s : nil)
}

json[:lessons] = course.lessons.reject { |lesson| lesson.deleted }.map do |lesson|
  render partial: "api/v4/lessons/#{@req_source}", locals: { lesson: lesson }, handler: "jb"
end

json
