# frozen_string_literal: true

json = {}
json[:poll] = render(partial: @req_source, locals: { poll: @poll }, handlers: 'jb')

if @poll.poll_options.present?
  json[:poll][:poll_options] = @poll.poll_options.map do |option|
    po = render(partial: "api/v4/poll_options/#{@req_source}", locals: { option: option }, handlers: 'jb')
    po[:numberOfVotes] = option.voters.count
    po[:voted] = option.voted?(current_user)
    po
  end
end
json
