json =
{
  id: activity.id,
  activity_id: activity.activity_id,
  type: activity.atype,
  deleted: activity.deleted,
  orig_value: activity.value
}
case activity.atype.to_sym
when :beacon
  beacon = ProductBeacon.find(activity.value["id"])
  unless beacon.deleted?
    json[:value] = render partial: "api/v4/product_beacons/beacon", locals: { beacon: beacon }, handlers: "jb"
  else
    json[:value] = nil
  end
else
  json[:value] = activity.value
end
json
